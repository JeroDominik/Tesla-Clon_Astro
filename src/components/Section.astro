---
const {color, title, subtitle} = Astro.props
const textColor = `text-${color}`
---


<section class="landing-section bg-black h-screen w-screen text-center relative"
         data-header-color={color}
>

    <div class={`z-30 h-full flex flex-col relative ${textColor}`}>
        <header>
            <h2 class="pt-40 text-[40px] font-medium">{title}</h2>
            <p class="text-sm">{subtitle}</p>
        </header>

        <footer class="flex flex-col flex-grow justify-end pb-20">
            <slot name="footer"/>
        </footer>
    </div>

    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <slot name="background"/>
    </div>
</section>